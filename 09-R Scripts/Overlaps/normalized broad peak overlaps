colnames(RPE1_H3K4me3_R2_AnaTelophase) <-  c("ID", "chromosome", "startK4", "endK4", "name", "score", "strandK4", "signalvalue", "pvalue", "qvalue")
RPE1_H3K4me3_R2_AnaTelophase$startME3AnaTelophase <- RPE1_H3K4me3_R2_AnaTelophase$startK4
RPE1_H3K4me3_R2_AnaTelophase$endME3AnaTelophase <- RPE1_H3K4me3_R2_AnaTelophase$endK4
RPE1_H3K4me3_R2_AnaTelophase$chromosome<- paste0( 'chr',RPE1_H3K4me3_R2_AnaTelophase$chromosome)
RPE1_H3K4me3_R2_AnaTelophase$widthBD <- RPE1_H3K4me3_R2_AnaTelophase$endME3AnaTelophase - RPE1_H3K4me3_R2_AnaTelophase$startME3AnaTelophase
Top_5percent_BD <- function( input_variable){
  n <- 5 #top 5%
  input_variable           <- input_variable[input_variable$widthBD > quantile(input_variable$widthBD,prob=1-n/100),]}

#RPE1_H3K4me3_R2_AnaTelophase <- Top_5percent_BD(RPE1_H3K4me3_R2_AnaTelophase)

RPE1_H3K4me3_R2_AnaTelophase_GR <- makeGRangesFromDataFrame(RPE1_H3K4me3_R2_AnaTelophase, keep.extra.columns = T, ignore.strand = T, seqnames.field = "chromosome", start.field = "startK4", end.field = "endK4")
overlaps <- plyranges::join_overlap_inner(Genes_GR, RPE1_H3K4me3_R2_AnaTelophase_GR)
